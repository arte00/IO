<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ub_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_bus"
            android:layout_marginEnd="8dp"
            />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ub_item_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autbous linii 53"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"


                />

            <TextView
                android:id="@+id/ub_item_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autobus Solaris III"
                android:textSize="18sp"


                />

            <TextView
                android:id="@+id/ub_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2137"
                android:textSize="18sp"
                android:textStyle="italic"

                />

        </LinearLayout>

        <ImageView
            android:id="@+id/ub_item_disabled"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_accesible"
            />

        <ImageView
            android:id="@+id/ub_item_elderly"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_elderly"
            />

        <ImageView
            android:id="@+id/ub_item_strollers"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_strollers"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>